generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(uuid())
  name   String
  email  String @unique
  avatar String @default("http://localhost:3000/icons/avatar-1.png")
  tasks  Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  completed   Boolean
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updtatedAt  DateTime @updatedAt
  priority    Priority @default(LOW)
}

enum Priority {
  LOW
  INTERMEDIATE
  HIGH
}
